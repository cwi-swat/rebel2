spec PingPong 
  id: one Integer,
  times: one Integer;

  identity id;
  
  init event start(id: one Integer) 
    post: 
      this.id' = id, 
      this.times' = 0;
  
   
event hit()
    post: 
      this.times' = this.times + 1, 
      this.id' = this.id;
    
  states : 
  pong -> ping : hit;
  ping -> pong : hit;
  (*) -> ping : start;