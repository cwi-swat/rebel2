module small::String

spec Person
  name: String;
  
  init event create(name: String)
    post: this.name' = name;
  
  states:
    (*) -> created: create;
    
config OnePerson = p: Person is uninitialized;

assert CanCreate = eventually exists p:Person | p is initialized;

check CanCreate from OnePerson in max 2 steps;