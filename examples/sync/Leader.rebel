module sync::Leader

import sync::Follower 
  
spec Leader   
  times: Integer,
  follower: Follower; 

  init event start(follower: Follower) 
    pre: 
      follower is active; 
    post: 
      this.follower' = follower, 
      this.times' = 0; 
      
  event hit(times: Integer) 
    pre:  
      this.follower.hit(times);
    post: 
      this.times' = this.times + 1; 

  states:
    (*) -> active: start;
    active -> active: hit;     