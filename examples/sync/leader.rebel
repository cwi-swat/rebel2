import Follower

spec Leader 
  id: Integer,
  times: Integer,
  follower: Follower;

  init event start(id: Integer, follower: Follower) 
    pre: 
      follower is initialized,
      id > 0;
    post: 
      this.id' = id, 
      this.follower' = follower, 
      this.times' = 0;
    
  event hit()
    //pre: this.follower.hit();
    post: this.times' = this.times + 1;

  states:
    (*) -> active: start;
    active -> active: hit;    