module sync::triple::Tailer

spec Tailer 
  nrOfHits: Integer;
  
  init event start()
    post: this.nrOfHits' = 0;
  
  event connected()
  
  event hit() 
    post: this.nrOfHits' = this.nrOfHits + 1;
  
  states:
    (*) -> waiting: start;
    waiting -> active: connected;
    active -> active: hit;
    