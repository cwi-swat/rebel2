module PingPong

spec PingPong 
  name: String,
  times: Integer;
  
  init event start(name: String)
    post: 
      this.name' = "MyPingPongMachine",
      this.times' = 0;
  
  event hit()
    post: 
      this.times' = this.times + 1; 
    
  states:
    (*) -> ping: start;
    ping -> pong: hit;
    pong -> ping: hit;